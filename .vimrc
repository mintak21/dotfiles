" system
set fenc=utf-8
set noswapfile
set autoread
set showcmd

" editor
set number "行番号
set cursorline "カーソル行を強調
set smartindent
set showmatch  "対応するカッコを表示
set laststatus=2 "ステータスラインを常に表示
syntax enable

" search
set ignorecase "小文字だけなら大小区別しない
set smartcase "大文字があるときは大小区別する
set wrapscan "最後->最初に戻る
set hlsearch "ハイライト
