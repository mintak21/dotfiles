{
    "env": {
        "CLAUDE_CODE_AUTO_CONNECT_IDE": "false",
        "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
        "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "true",
        "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
        "DISABLE_ERROR_REPORTING": "true",
        "DISABLE_TELEMETRY": "true",
        "DISABLE_AUTOUPDATER": "true",
        "DISABLE_BUG_COMMAND": "true",
        "ENABLE_TOOL_SEARCH": "true"
    },
    "permissions": {
        "allow": [
            "Bash(cat:*)",
            "Bash(ls:*)",
            "Bash(git checkout:*)",
            "Bash(git switch:*)",
            "Bash(git clone:*)",
            "Bash(git push:*)",
            "Bash(git commit:*)",
            "Bash(gh:*)",
            "Read(~/.config)",
            "mcp__context7",
            "mcp__playwright"
        ],
        "deny": [
            "Bash(sudo:*)",
            "Bash(rm -rf:*)",
            "Bash(git reset:*)",
            "Bash(git rebase:*)",
            "Read(./.env)",
            "Read(.env.*)",
            "Read(.envrc.*)",
            "Read(.envrc.*)",
            "Read(.env.*)",
            "Read(id_rsa)",
            "Read(id_ed25519)",
            "Read(**/*token*)",
            "Read(**/*key*)",
            "Read(./secrets/**)",
            "Write(.env*)",
            "Write(.envrc*)",
            "Write(**/secrets/**)",
            "Bash(nc:*)",
            "Bash(npm uninstall:*)",
            "Bash(npm remove:*)",
            "Bash(psql:*)",
            "Bash(mysql:*)",
            "Bash(kubectl:*)"
        ]
    },
    "hooks": {
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay -v 0.05 ~/.claude/sound/free_selection.mp3"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay -v 0.05 ~/.claude/sound/free_end.mp3"
                    }
                ]
            }
        ]
    },
    "statusLine": {
        "type": "command",
        "command": "npx ccusage@latest statusline",
        "padding": 0
    },
    "alwaysThinkingEnabled": false
}